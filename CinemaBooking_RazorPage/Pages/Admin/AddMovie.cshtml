@page
@model CinemaBooking_RazorPage.Pages.Admin.AddMovieModel
@{
}

<!DOCTYPE html>

<html class="dark" lang="vi">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@100;300;400;500;600;700;800;900&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#ff8c00",
                        "background-light": "#f8f7f5",
                        "background-dark": "#231a0f",
                        "input-dark": "#2a2a2a",
                    },
                    fontFamily: {
                        "display": ["Be Vietnam Pro", "sans-serif"]
                    },
                    borderRadius: { "DEFAULT": "1rem", "lg": "2rem", "xl": "3rem", "full": "9999px" },
                },
            },
        }
    </script>
    <style>
        :root {
            --primary-color: #ff8c00;
        }

        .bg-primary-important {
            background-color: var(--primary-color) !important;
        }

        .text-primary-important {
            color: var(--primary-color) !important;
        }

        .border-primary-important {
            border-color: var(--primary-color) !important;
        }

        .custom-scrollbar::-webkit-scrollbar {
            width: 6px;
        }

        .custom-scrollbar::-webkit-scrollbar-track {
            background: #1e1e1e;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #333;
            border-radius: 10px;
        }

            .custom-scrollbar::-webkit-scrollbar-thumb:hover {
                background: var(--primary-color);
            }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-slate-900 dark:text-slate-100 antialiased overflow-x-hidden">
    <div class="flex min-h-screen">
        <!-- Side Navigation Bar -->
        <aside class="fixed left-0 top-0 h-screen w-72 bg-slate-900/50 dark:bg-black/40 backdrop-blur-xl border-r border-slate-200 dark:border-slate-800 z-50">
            <div class="flex flex-col h-full p-6">
                <!-- Logo -->
                <div class="flex items-center gap-3 mb-10 px-2">
                    <div class="w-10 h-10 rounded-full bg-primary-important flex items-center justify-center shadow-lg shadow-orange-500/20">
                        <span class="material-symbols-outlined text-black font-bold">movie</span>
                    </div>
                    <div>
                        <h1 class="text-xl font-black tracking-tight text-white">Cinema<span class="text-primary-important">VN</span></h1>
                        <p class="text-[10px] uppercase tracking-widest text-slate-400 font-bold">Admin Panel</p>
                    </div>
                </div>
                <!-- Navigation -->
                <nav class="flex-1 space-y-2">
                    <a class="flex items-center gap-3 px-4 py-3 rounded-full bg-primary-important text-black font-bold transition-all" href="#">
                        <span class="material-symbols-outlined">movie_filter</span>
                        <span>Quản lý phim</span>
                    </a>
                    <a class="flex items-center gap-3 px-4 py-3 rounded-full text-slate-400 hover:bg-slate-800 hover:text-white transition-all" href="#">
                        <span class="material-symbols-outlined">domain</span>
                        <span>Quản lý rạp phim</span>
                    </a>
                    <a class="flex items-center gap-3 px-4 py-3 rounded-full text-slate-400 hover:bg-slate-800 hover:text-white transition-all" href="#">
                        <span class="material-symbols-outlined">meeting_room</span>
                        <span>Quản lý phòng chiếu</span>
                    </a>
                    <a class="flex items-center gap-3 px-4 py-3 rounded-full text-slate-400 hover:bg-slate-800 hover:text-white transition-all" href="#">
                        <span class="material-symbols-outlined">event_seat</span>
                        <span>Quản lý ghế ngồi</span>
                    </a>
                    <a class="flex items-center gap-3 px-4 py-3 rounded-full text-slate-400 hover:bg-slate-800 hover:text-white transition-all" href="#">
                        <span class="material-symbols-outlined">schedule</span>
                        <span>Quản lý suất chiếu</span>
                    </a>
                </nav>
                <!-- Bottom Actions -->
                <div class="mt-auto space-y-2 pt-6 border-t border-slate-800">
                    <form method="post" asp-page-handler="Logout">
                        <button type="submit" class="flex items-center gap-3 px-4 py-3 rounded-full text-red-400 hover:bg-red-500/10 transition-all">
                            <span class="material-symbols-outlined">logout</span>
                            <span>Đăng xuất</span>
                        </button>
                    </form>
                </div>
            </div>
        </aside>
        <!-- Main Content Area -->
        <main class="flex-1 ml-72 min-h-screen flex flex-col">
            <!-- Header -->
            <header class="flex items-center justify-between px-8 py-6 sticky top-0 bg-background-dark/80 backdrop-blur-md z-40 border-b border-primary/10">
                <div class="flex items-center gap-3">
                    <span class="material-symbols-outlined primary-important text-3xl">edit_square</span>
                    <div>
                        <h2 class="text-2xl font-bold text-slate-100">Thêm phim</h2>
                        <p class="text-slate-400 text-sm">Thêm bộ phim mới vào danh sách phim của hệ thống</p>
                    </div>
                </div>
            </header>
            <!-- Add Form Section -->
            <div class="p-8 max-w-5xl mx-auto w-full flex-grow">
                <form method="post" enctype="multipart/form-data" class="space-y-8 pb-20">
                    <div class="grid grid-cols-1 md:grid-cols-12 gap-8">
                        <!-- Left Column: Media & Visuals -->
                        <div class="md:col-span-4 space-y-6">
                            <!-- Poster Upload -->
                            <div class="flex flex-col gap-2">
                                <label class="text-slate-300 text-sm font-bold flex items-center gap-2">
                                    <span class="material-symbols-outlined text-primary text-sm">image</span> Poster Phim
                                </label>
                                <div class="relative group cursor-pointer border-2 border-dashed border-primary/30 rounded-2xl bg-input-dark p-2 hover:border-primary-important transition-all overflow-hidden aspect-[2/3]">
                                    <img alt="Movie Poster Preview"
                                         class="w-full h-full object-cover rounded-xl opacity-60 group-hover:opacity-40 transition-opacity"
                                          />
                                    <div class="absolute inset-0 flex flex-col items-center justify-center text-center p-4">
                                        <span class="material-symbols-outlined text-4xl mb-2 text-primary">cloud_upload</span>
                                        <p class="text-xs text-slate-300 font-medium">Click hoặc kéo thả để thay đổi ảnh poster</p>
                                        <p id="posterFileName" class="text-green-400 text-xs mt-1 hidden"></p>
                                    </div>
                                    <input asp-for="PosterFile"
                                           id="posterInput"
                                           accept="image/*"
                                           class="absolute inset-0 opacity-0 cursor-pointer"
                                           type="file" />
                                </div>
                            </div>
                            <!-- Trailer Upload -->
                            <div class="flex flex-col gap-2">
                                <label class="text-slate-300 text-sm font-bold flex items-center gap-2">
                                    <span class="material-symbols-outlined text-primary text-sm">movie_edit</span> Trailer Video
                                </label>
                                <div class="bg-input-dark border border-primary/30 rounded-xl p-4 flex flex-col items-center justify-center gap-2 hover:bg-input-dark/80 transition-all border-dashed">
                                    <span class="material-symbols-outlined text-3xl text-slate-400">video_library</span>
                                    <p id="trailerFileName" class="text-green-400 text-xs mt-2 hidden"></p>
                                    <label for="trailerInput"
                                           class="mt-2 text-xs font-bold text-primary px-4 py-1.5 border border-primary rounded-full hover:bg-primary-important hover:text-background-dark transition-all cursor-pointer">
                                        Thay đổi Video
                                    </label>
                                    <input asp-for="TrailerFile"
                                           id="trailerInput"
                                           accept="video/*"
                                           class="hidden"
                                           type="file" />
                                </div>
                            </div>
                        </div>
                        <!-- Right Column: Text Information -->
                        <div class="md:col-span-8 space-y-6">
                            <!-- Basic Info Card -->
                            <div class="bg-input-dark/40 p-6 rounded-2xl border border-white/5 space-y-4">
                                <!-- Title -->
                                <div class="flex flex-col gap-2">
                                    <label class="text-slate-300 text-sm font-bold">Tiêu đề phim</label>
                                    <input asp-for="Movie.Title"
                                           class="w-full bg-input-dark border-primary-important text-slate-100 rounded-xl px-4 py-3" />
                                </div>
                                <!-- Description -->
                                <div class="flex flex-col gap-2">
                                    <label class="text-slate-300 text-sm font-bold">Mô tả bộ phim</label>
                                    <textarea asp-for="Movie.Description"
                                              class="w-full bg-input-dark border-primary-important text-slate-100 rounded-xl px-4 py-3 resize-none"
                                              rows="5"></textarea>
                                </div>
                                <div class="grid grid-cols-2 gap-4">
                                    <!-- Release Date -->
                                    <div class="flex flex-col gap-2">
                                        <label class="text-slate-300 text-sm font-bold">Ngày phát hành</label>
                                        <div class="relative">
                                            <input asp-for="Movie.ReleaseDate"
                                                   type="date"
                                                   class="w-full bg-input-dark border-primary-important text-slate-100 rounded-xl px-4 py-3" />
                                        </div>
                                    </div>
                                    <!-- Duration -->
                                    <div class="flex flex-col gap-2">
                                        <label class="text-slate-300 text-sm font-bold">Thời lượng (Phút)</label>
                                        <input asp-for="Movie.DurationMinutes"
                                               type="number"
                                               class="w-full bg-input-dark border-primary-important text-slate-100 rounded-xl px-4 py-3" />
                                    </div>
                                </div>
                                <!-- Status -->
                                <div class="flex flex-col gap-2">
                                    <label class="text-slate-300 text-sm font-bold">Trạng thái chiếu</label>
                                    <select asp-for="Movie.Status"
                                            class="w-full bg-input-dark border-primary-important text-slate-100 rounded-xl px-4 py-3">

                                        <option value="0">Sắp chiếu</option>
                                        <option value="1">Đang chiếu</option>
                                        <option value="2">Đã đóng</option>

                                    </select>
                                </div>
                            </div>
                            <div class="mt-6 p-4 rounded-2xl border border-primary/40 bg-primary/5">
                                <label class="flex items-center justify-between cursor-pointer group">
                                    <!-- Text -->
                                    <div class="flex flex-col">
                                        <span class="text-sm font-semibold text-primary flex items-center gap-2">
                                            <span class="material-symbols-outlined text-base">local_fire_department</span>
                                            Phim nổi bật
                                        </span>
                                        <span class="text-xs text-slate-400">
                                            Hiển thị phim này ở vị trí nổi bật ngoài trang chủ
                                        </span>
                                    </div>
                                    <!-- Toggle -->
                                    <div class="relative">
                                        <input asp-for="Movie.IsMainFeature"
                                               type="checkbox"
                                               class="sr-only peer" />
                                        <div class="w-12 h-6 bg-slate-600 rounded-full peer peer-checked:bg-primary transition-all duration-300"></div>
                                        <div class="absolute top-0.5 left-0.5 w-5 h-5 bg-white rounded-full transition-all duration-300 peer-checked:translate-x-6">
                                        </div>
                                    </div>
                                </label>
                            </div>
                            <!-- Genre Selection Card -->
                            <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
                                @foreach (var genre in Model.AllGenres)
                                {
                                    <label class="flex items-center gap-3 cursor-pointer group">
                                        <input type="checkbox"
                                               name="SelectedGenres"
                                               value="@genre.Id"
                                               class="w-5 h-5 rounded border-primary bg-input-dark text-primary"
                                               />

                                        <span class="text-sm text-slate-300 group-hover:text-primary transition-colors">
                                            @genre.Name
                                        </span>
                                    </label>
                                }
                            </div>
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="bg-green-500 text-white p-3 rounded-lg mb-4">
                                    @TempData["SuccessMessage"]
                                </div>
                            }

                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="bg-red-500 text-white p-3 rounded-lg mb-4">
                                    @TempData["ErrorMessage"]
                                </div>
                            }
                            <!-- Form Actions -->
                            <div class="flex items-center justify-end gap-4 pt-4">
                                <button class="px-8 py-3 rounded-xl border border-slate-700 text-slate-400 font-bold hover:bg-slate-800 transition-all flex items-center gap-2" type="submit" asp-page-handler="Cancel">
                                    Trở về
                                </button>
                                <button class="bg-primary-important text-background-dark px-10 py-3 rounded-xl font-black text-lg shadow-lg shadow-primary/20 hover:scale-[1.02] active:scale-95 transition-all flex items-center gap-2" type="submit">
                                    <span class="material-symbols-outlined">save</span>
                                    Thêm phim
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <!-- Global Footer Placeholder (Razor Page context) -->
            <footer class="mt-auto px-8 py-6 border-t border-primary/10 text-center text-slate-500 text-xs">
                Thiết kế bởi LocCute.
            </footer>
        </main>
    </div>
</body>
</html>

<script>
    // Poster
    document.getElementById("posterInput").addEventListener("change", function () {
        const fileName = this.files.length > 0 ? this.files[0].name : "";
        const label = document.getElementById("posterFileName");

        if (fileName) {
            label.textContent = "Đã chọn: " + fileName;
            label.classList.remove("hidden");
        } else {
            label.classList.add("hidden");
        }
    });

    // Trailer
    document.getElementById("trailerInput").addEventListener("change", function () {
        const fileName = this.files.length > 0 ? this.files[0].name : "";
        const label = document.getElementById("trailerFileName");

        if (fileName) {
            label.textContent = "Đã chọn: " + fileName;
            label.classList.remove("hidden");
        } else {
            label.classList.add("hidden");
        }
    });
</script>